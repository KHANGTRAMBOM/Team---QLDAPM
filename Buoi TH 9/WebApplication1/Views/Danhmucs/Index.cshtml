@model IEnumerable<WebApplication1.Models.Mathang>

@{
    ViewData["Title"] = "Mặt hàng";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <p><a asp-action="Create" class="btn btn-success"><i class="fa-light fa-plus"></i> Thêm mới</a></p>
        <table class="table table-sm table-hover table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th width="5%">#</th>
                    <th>@Html.DisplayNameFor(model => model.Ten)</th>
                    <th>@Html.DisplayNameFor(model => model.GiaGoc)</th>
                    <th>@Html.DisplayNameFor(model => model.GiaBan)</th>
                    <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
                    <th>@Html.DisplayNameFor(model => model.MoTa)</th>
                    <th>@Html.DisplayNameFor(model => model.HinhAnh)</th>
                    <th>@Html.DisplayNameFor(model => model.LuotXem)</th>
                    <th>@Html.DisplayNameFor(model => model.LuotMua)</th>
                    <th>@Html.DisplayNameFor(model => model.MaDmNavigation)</th>
                    <th width="5%">Sửa</th>
                    <th width="5%">Xóa</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var stt = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                        <td>@Html.DisplayFor(modelItem => item.GiaGoc)₫</td>
                        <td>@Html.DisplayFor(modelItem => item.GiaBan)₫</td>
                        <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                        <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                        <td>
                            <img src="~/images/products/@Html.DisplayFor(modelItem => item.HinhAnh)" alt="@Html.DisplayFor(modelItem => item.Ten)" class="img-thumbnail" style="width: 75px; height: auto;" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.LuotXem)</td>
                        <td>@Html.DisplayFor(modelItem => item.LuotMua)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaDmNavigation.Ten)</td>
                        <td class="text-center">
                            <a class="btn btn-outline-warning btn-sm mb-1" asp-action="Edit" asp-route-id="@item.MaSach">
                                <i class="bi bi-pencil"></i> Sửa
                            </a>
                            <a class="btn btn-outline-info btn-sm mb-1" asp-action="Details" asp-route-id="@item.MaSach">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.MaSach">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>