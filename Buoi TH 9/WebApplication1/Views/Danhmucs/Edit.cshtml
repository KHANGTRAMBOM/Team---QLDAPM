@model WebApplication1.Models.Mathang

@{
    ViewData["Title"] = "Sửa mặt hàng";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSach" />

            <div class="mb-3">
                <label asp-for="Ten" class="control-label">Tên</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GiaGoc" class="control-label">Giá gốc</label>
                <input asp-for="GiaGoc" class="form-control" />
                <span asp-validation-for="GiaGoc" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="GiaBan" class="control-label">Giá bán</label>
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SoLuong" class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HinhAnh" class="control-label">Hình Ảnh</label>
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <div>
                        <img src="~/images/products/@Model.HinhAnh" class="img-thumbnail" style="width: 100px; height: auto;" />
                    </div>
                }
                <input name="Image" class="form-control" type="file" accept="image/jpg, image/jpeg , image/png" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MaDm" class="control-label">Loại Sách</label>
                <select asp-for="MaDm" class="form-control" asp-items="ViewBag.MaDm">
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="LuotXem" class="control-label">Lượt xem</label>
                <input asp-for="LuotXem" class="form-control" />
                <span asp-validation-for="LuotXem" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LuotMua" class="control-label">Lượt mua</label>
                <input asp-for="LuotMua" class="form-control" />
                <span asp-validation-for="LuotMua" class="text-danger"></span>
            </div>
            <div class="mb-0">
                <button type="submit" class="btn btn-primary"><i class="fa-light fa-floppy-disk"></i> Cập nhật</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
